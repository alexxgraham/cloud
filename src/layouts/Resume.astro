---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

const { title, description, startDate, updatedDate } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			a {
				color: var(--accent) !important;
			}
			.prose {
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>
	<body class="bg-zinc-200 dark:bg-zinc-800">
		<Header />
		<main class="bg-zinc-50 dark:bg-zinc-900 dark:text-zinc-100 max-w-full m-0 w-full p-0 min-h-screen">
			<article>
				<div class="prose w-[45rem] xl:w-[60rem] min-h-screen">
					<div class="title">
						<div class="date">
							Published
							<p class="text-sm">
								<FormattedDate date={startDate} />
							</p>
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h3>{title}</h3>
						<hr class="border-zinc-500" />
						<p class="my-4 italic text-sm text-zinc-600 dark:text-zinc-400">{description}</p>
						<hr class="border-zinc-500" />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
