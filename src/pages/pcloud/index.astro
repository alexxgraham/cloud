---
import Layout from '../../layouts/Personal.astro';

const user: any = false;
---

<Layout
    title="Personal Cloud"
>
    <div class="flex flex-col">
        {user ? (
            <p class="self-center text-sm pb-8">{user.name}</p>
        ) : (
            <div class="flex flex-col">
                <p class="self-center text-sm pb-8 italic">no user defined</p>
                <section class="font-sans self-center flex flex-col w-40 scale-75 text-zinc-500 p-4 border rounded-lg border-zinc-500">
                    <p class="flex gap-6 w-full justify-center">
                        Login
                        <span class="flex gap-1 items-center place-self-center">
                            <svg xmlns="http://www.w3.org/2000/svg" height="18px" viewBox="0 -960 960 960" width="18px" fill="currentColor"><path d="M260-120q-58 0-99-41t-41-99q0-58 41-99t99-41h60v-160h-60q-58 0-99-41t-41-99q0-58 41-99t99-41q58 0 99 41t41 99v60h160v-60q0-58 41-99t99-41q58 0 99 41t41 99q0 58-41 99t-99 41h-60v160h60q58 0 99 41t41 99q0 58-41 99t-99 41q-58 0-99-41t-41-99v-60H400v60q0 58-41 99t-99 41Zm0-80q25 0 42.5-17.5T320-260v-60h-60q-25 0-42.5 17.5T200-260q0 25 17.5 42.5T260-200Zm440 0q25 0 42.5-17.5T760-260q0-25-17.5-42.5T700-320h-60v60q0 25 17.5 42.5T700-200ZM400-400h160v-160H400v160ZM260-640h60v-60q0-25-17.5-42.5T260-760q-25 0-42.5 17.5T200-700q0 25 17.5 42.5T260-640Zm380 0h60q25 0 42.5-17.5T760-700q0-25-17.5-42.5T700-760q-25 0-42.5 17.5T640-700v60Z"/></svg>
                            G
                        </span>
                    </p>
                </section>
            </div>
        )}
    </div>
</Layout>
<script>
    document.addEventListener("keydown", function(event) {
        if (event.metaKey && event.key === "g") {
            window.location.href = "/login/";
        }
        if (event.metaKey && event.key === "j") {
            window.location.href = "/join/";
        }
    });
</script>
