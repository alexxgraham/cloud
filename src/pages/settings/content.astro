---
import Checkbox from '../../components/settings/form/Checkbox.astro';
import ButtonToPage from '../../components/settings/form/ButtonToPage.astro';
import Input from '../../components/settings/form/Input.astro';
import Layout from '../../layouts/settings/Main.astro';
import Form from '../../layouts/settings/Form.astro';
import SelectionGroup from '../../components/settings/form/SelectionGroup.astro';
---

<Layout>
    <section class="border rounded-lg p-3">
        <h4 class="m-0">Content</h4>
        <Form>
            <Input label="Custom Link" value="" />
            <ButtonToPage label="Profile" value="Public" />
            <ButtonToPage label="Contact Page" value="Public" />
            <ButtonToPage label="Resume" value="Public" />
            <SelectionGroup label="Default Visibility">
                <Checkbox id="vis-private" name="ag/cloud.c-vis-private">Private</Checkbox>
                <Checkbox id="vis-low" name="ag/cloud.c-vis-low">Low</Checkbox>
                <Checkbox id="vis-public" name="ag/cloud.c-vis-public">Public</Checkbox>
                <Checkbox id="vis-group" name="ag/cloud.c-vis-group">Group</Checkbox>
            </SelectionGroup>
        </Form>
    </section>
</Layout>
